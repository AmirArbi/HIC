<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HIC.Views.Doctor.History" BackgroundColor="White">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="Filter">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="BorderColor" Value="#23408E"/>
                <Setter Property="TextColor" Value="#23408E"/>
                <Setter Property="FontFamily" Value="Monteserrat"/>
                <Setter Property="FontSize" Value="9"/>
                <Setter Property="HeightRequest" Value="10"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
            <Style TargetType="Label" x:Key="Name">
                <Setter Property="TextColor" Value="#23408E"/>
                <Setter Property="FontFamily" Value="Monteserrat"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="CharacterSpacing" Value="-0.05"/>
                <Setter Property="LineHeight" Value="10.5"/>
            </Style>
            <Style TargetType="Label" x:Key="Dates">
                <Setter Property="TextColor" Value="#23408E"/>
                <Setter Property="FontFamily" Value="Monteserrat"/>
                <Setter Property="FontSize" Value="9"/>
                <Setter Property="CharacterSpacing" Value="-0.05"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout Orientation="Horizontal" Padding="0 10">
                <Label Text="History" Style="{StaticResource Primary}" HorizontalOptions="StartAndExpand"/>
                <Button Text="Filter >" Style="{StaticResource Filter}"/>
            </StackLayout>
            <Entry ReturnType="Search" Placeholder="Search..."  HorizontalOptions="FillAndExpand" PlaceholderColor="LightGray"/>
            
            <!-- Card -->
            <Frame CornerRadius="12" BackgroundColor="White" HasShadow="True" Padding="10 0 5 20">
                <StackLayout >
                    <StackLayout Orientation="Horizontal" Padding="0 20 0 0">
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label Text="Houssem" Style="{StaticResource Name}"/>
                            <Label Text="Hassou" Style="{StaticResource Name}"/>
                        </StackLayout>
                        <!--Icon-->
                        <Label Text="O"/>
                        <Label Text="12/08/2030" Style="{StaticResource Dates}"/>
                        <!--Icon-->
                        <Label Text="O"/>
                        <Label Text="18:15" Style="{StaticResource Dates}"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <!--Fix tf is this-->
                        <Frame CornerRadius="100" HeightRequest="40" WidthRequest="90">
                        </Frame>
                        <!-- Fix CornerRadius -->
                        <Frame CornerRadius="6" BackgroundColor="#23408E" Padding="15 10">
                            <StackLayout Spacing="15">
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="Sex" Style="{StaticResource BoldParagraph}"/>
                                    <Label Text="Male" Style="{StaticResource Paragraph}" MaxLines="1"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="Cause" Style="{StaticResource BoldParagraph}"/>
                                    <Label Text="Injury" Style="{StaticResource Paragraph}" MaxLines="1"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="Details" Style="{StaticResource BoldParagraph}"/>
                                    <Label Text="Lorem ipsum dolor sit amet,consectetuer adipiscing elit. Aenean commodo ligula eget..." Style="{StaticResource Paragraph}" MaxLines="2"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                    <Button Text="See more" Style="{StaticResource SecondaryButton}" Padding="0" Margin="0 10 0 0" HeightRequest="16" FontSize="5" HorizontalOptions="End"/>

                </StackLayout>
                
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>